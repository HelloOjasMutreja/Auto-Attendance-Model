<h1>New Attendance</h1>

<%= form_for @attendance do |f| %>
  <div>
    <%= f.label :student_id %>
    <%= f.collection_select :student_id, Student.all, :id, :name %>
  </div>

  <div>
    <%= f.label :date %>
    <%= f.date_field :date %>
  </div>

  <div>
    <%= f.label :status %>
    <%= f.text_field :status %>
  </div>

  <div>
    <%= f.submit %>
  </div>
<% end %>

<%= link_to 'Back', attendances_path %>
